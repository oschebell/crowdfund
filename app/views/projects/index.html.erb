<h1><%= pluralize(@projects.count, 'project') %></h1>
<ul>
<% @projects.each do |project| %>
    <li><strong><%= project.name %></strong>
                : <%= truncate(project.description, length: 10, separator: ' ') %>.
                 Amount needed to raise - <%= number_to_currency(project.target_pledge_amount) %>
    </li>
    <p><%= project.website %></p>
    <p>Pledging ends in: <%= format_pledging_ends_on(project) %></p>

   
<% end %>



</ul>



